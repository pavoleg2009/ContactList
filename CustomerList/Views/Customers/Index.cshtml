@*@model List<CustomerList.Models.Customer>*@

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <h2 id="cusomerIndexPageHeader">
            Customers
            <button type="button" class="btn btn-primary pull-right" 
                    data-toggle="modal" data-target="#customerFormModalDiv" data-form-mode="Create" customer-id="0">
                New Customer
            </button>
        </h2>

    </div>
    @*Customer Detail View (for Create and Edit actions)*@
    @Html.Partial("~/Views/Customers/_PartialModalCustomerDetails.cshtml")
    @*Modal Dialog View (for Delete Confirmation)*@
    @Html.Partial("~/Views/Customers/_PartialModalConfirmDialog.cshtml")


    <table id="customers" class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="col1">First Name</th>
                <th class="col2">Last Name</th>
                <th class="col3">Email</th>
                <th class="col4">Phone Number</th>
                <th class="col5">Actions</th>
                <th class="col6">Id</th>
            </tr>
        </thead>
        <tbody class=""></tbody>
    </table>

    @section scripts {

        @Scripts.Render("~/bundles/jqueryval")
        <script src="~/Scripts/Front/CustomersController.js"></script>
    }
